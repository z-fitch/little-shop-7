<%= render partial: "merchants/header", locals: {merchant: @merchant} %>

<h3>Update Bulk Discount</h3>

<%= form_with model: @bulk_discount, url: merchant_bulk_discount_path(@merchant, @discount), method: :patch do |f| %>
  <%= f.label :percentage %>
  <%= f.text_field :percentage, value: @discount.percentage %>

  <%= f.label :quantity %>
  <%= f.text_field :quantity, value: @discount.quantity %> 

  <%= f.submit %>
<% end %>
